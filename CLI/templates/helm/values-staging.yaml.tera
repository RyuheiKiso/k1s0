replicaCount: 2

resources:
  requests:
    cpu: 250m
    memory: 256Mi
  limits:
    cpu: 1000m
    memory: 1Gi

autoscaling:
  enabled: true
  minReplicas: 2
  maxReplicas: 5

config:
  data:
    config.yaml: |
      app:
        environment: staging
{% if has_database %}
      database:
        host: postgres.k1s0-{{ tier }}.svc.cluster.local
        ssl_mode: require
{% endif %}
      observability:
        log:
          level: info
        trace:
          sample_rate: 0.5
