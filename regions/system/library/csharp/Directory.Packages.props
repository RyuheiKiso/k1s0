<Project>
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <!-- Shared analyzers -->
  <ItemGroup Label="Analyzers">
    <PackageVersion Include="StyleCop.Analyzers" Version="1.2.0-beta.556" />
  </ItemGroup>

  <!-- Test frameworks -->
  <ItemGroup Label="Testing">
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.12.0" />
    <PackageVersion Include="xunit" Version="2.9.3" />
    <PackageVersion Include="xunit.runner.visualstudio" Version="2.8.2" />
    <PackageVersion Include="NSubstitute" Version="5.3.0" />
    <PackageVersion Include="WireMock.Net" Version="1.6.10" />
    <PackageVersion Include="Testcontainers" Version="3.10.0" />
    <PackageVersion Include="Testcontainers.PostgreSql" Version="3.10.0" />
    <PackageVersion Include="coverlet.collector" Version="6.0.3" />
  </ItemGroup>

  <!-- shared -->
  <ItemGroup Label="shared">
    <PackageVersion Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.1" />
    <PackageVersion Include="Microsoft.Extensions.Http" Version="9.0.1" />
  </ItemGroup>

  <!-- caching -->
  <ItemGroup Label="caching">
    <PackageVersion Include="Microsoft.Extensions.Caching.Memory" Version="9.0.1" />
  </ItemGroup>

  <!-- config -->
  <ItemGroup Label="config">
    <PackageVersion Include="YamlDotNet" Version="16.3.0" />
  </ItemGroup>

  <!-- telemetry -->
  <ItemGroup Label="telemetry">
    <PackageVersion Include="OpenTelemetry" Version="1.12.0" />
    <PackageVersion Include="OpenTelemetry.Extensions.Hosting" Version="1.12.0" />
    <PackageVersion Include="OpenTelemetry.Instrumentation.AspNetCore" Version="1.12.0" />
    <PackageVersion Include="OpenTelemetry.Instrumentation.GrpcNetClient" Version="1.12.0-beta.1" />
    <PackageVersion Include="OpenTelemetry.Exporter.Prometheus.AspNetCore" Version="1.12.0-rc.1" />
    <PackageVersion Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" Version="1.12.0" />
    <PackageVersion Include="Serilog.AspNetCore" Version="9.0.0" />
    <PackageVersion Include="Serilog.Formatting.Compact" Version="3.0.0" />
    <PackageVersion Include="Grpc.AspNetCore" Version="2.67.0" />
  </ItemGroup>

  <!-- auth -->
  <ItemGroup Label="auth">
    <PackageVersion Include="Microsoft.IdentityModel.Tokens" Version="8.4.0" />
    <PackageVersion Include="System.IdentityModel.Tokens.Jwt" Version="8.4.0" />
    <PackageVersion Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="10.0.3" />
  </ItemGroup>

  <!-- kafka -->
  <ItemGroup Label="kafka">
    <PackageVersion Include="Confluent.Kafka" Version="2.8.0" />
  </ItemGroup>

  <!-- schemaregistry -->
  <ItemGroup Label="schemaregistry">
    <PackageVersion Include="Confluent.SchemaRegistry" Version="2.8.0" />
  </ItemGroup>

  <!-- serviceauth -->
  <!-- Uses Microsoft.IdentityModel.Tokens (defined in auth group) -->

  <!-- messaging -->
  <!-- Uses Confluent.Kafka (defined in kafka group) -->

  <!-- outbox -->
  <ItemGroup Label="outbox">
    <PackageVersion Include="Npgsql" Version="9.0.3" />
    <PackageVersion Include="Dapper" Version="2.1.35" />
    <PackageVersion Include="Microsoft.Extensions.Hosting.Abstractions" Version="9.0.1" />
  </ItemGroup>

  <!-- encryption -->
  <ItemGroup Label="encryption">
    <PackageVersion Include="Konscious.Security.Cryptography.Argon2" Version="1.3.1" />
  </ItemGroup>

  <!-- dlq -->
  <!-- Uses System.Net.Http.Json (built-in to .NET) -->

  <!-- saga -->
  <ItemGroup Label="saga">
    <PackageVersion Include="Grpc.Net.Client" Version="2.67.0" />
    <PackageVersion Include="Google.Protobuf" Version="3.29.3" />
    <PackageVersion Include="Grpc.Tools" Version="2.67.0" />
  </ItemGroup>
</Project>
