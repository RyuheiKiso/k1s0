{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Request Rate by Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(http_requests_total{namespace=~\"$namespace\", service=~\"$service\"}[5m])",
          "legendFormat": "{{service}} - {{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "title": "Error Rate by Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "rate(http_requests_total{namespace=~\"$namespace\", service=~\"$service\", status=~\"5..\"}[5m]) / rate(http_requests_total{namespace=~\"$namespace\", service=~\"$service\"}[5m])",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.001 },
              { "color": "red", "value": 0.01 }
            ]
          }
        }
      }
    },
    {
      "title": "gRPC Request Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(grpc_server_handled_total{grpc_service=~\"$service\"}[5m])",
          "legendFormat": "{{grpc_service}}.{{grpc_method}} [{{grpc_code}}]",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "title": "gRPC Latency (P99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(grpc_server_handling_seconds_bucket{grpc_service=~\"$service\"}[5m]))",
          "legendFormat": "{{grpc_service}}.{{grpc_method}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "title": "Database Query Duration (P99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(db_query_duration_seconds_bucket{service=~\"$service\"}[5m]))",
          "legendFormat": "{{query_name}} ({{table}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "title": "Kafka Messages Produced",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "rate(kafka_messages_produced_total{service=~\"$service\"}[5m])",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "cps"
        }
      }
    },
    {
      "title": "Kafka Messages Consumed",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "rate(kafka_messages_consumed_total{service=~\"$service\"}[5m])",
          "legendFormat": "{{topic}} ({{consumer_group}})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "cps"
        }
      }
    },
    {
      "title": "Pod CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\", pod=~\"$service.*\"}[5m])",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit"
        }
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["k1s0", "service"],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(http_requests_total, namespace)",
        "regex": "k1s0-.*",
        "multi": false,
        "includeAll": false
      },
      {
        "name": "service",
        "type": "query",
        "query": "label_values(http_requests_total{namespace=~\"$namespace\"}, service)",
        "multi": false,
        "includeAll": false
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "title": "k1s0 Service Detail",
  "uid": "k1s0-service",
  "version": 1
}
